{% extends '_base.njk' %}


{% block metaDescription %}We're GHC! You can visit us everyday from 8:00 till 23:00. (Friday and Saturday: 8:00 – 1:00){% endblock %}
{% block title %}Home -{% endblock %}

{% block navIndex %}active{% endblock %}
{% block footerNavIndex %}active{% endblock %}

{% block content %}  
    <h1>Generic Hipster Coffee</h1>
    <p class="h2 mb-3">Specialty coffee, fresh food &amp; local community</p>
    
    <img 
        class="img-fluid mb-3" 
        src="/img/counter/counter-w-1133.jpg"
        srcset="
            /img/counter/counter-w-272.jpg 272w,
            /img/counter/counter-w-518.jpg 518w,
            /img/counter/counter-w-706.jpg 706w,
            /img/counter/counter-w-866.jpg 866w,
            /img/counter/counter-w-1005.jpg 1005w,
            /img/counter/counter-w-1133.jpg 1133w,
            /img/counter/counter-w-1506.jpg 1506w,
            /img/counter/counter-w-1822.jpg 1822w,
            /img/counter/counter-w-2022.jpg 2022w,
            /img/counter/counter-w-2184.jpg 2184w
        "
        sizes="
            (min-width: 1200px) 1092px,
            (min-width: 992px) 912px,
            (min-width: 768px) 672px,
            (min-width: 576px) 492px,
            calc(100vw - 2 * 1.5rem)
        "
        alt=""
        width="1133"
        height="637"
    >
    
    <section class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g">
        <section class="col">
            <h2 class="h4">Opening hours</h2>
            <p>
                Sunday – Thursday: 8:00 – 23:00
                <br>
                Friday – Saturday: 8:00 – 1:00
            </p>
        </section>
        <section class="col">
            <h2 class="h4">Book a table</h2>
            <p>Call <a class="text-decoration-none text-reset" href="tel:+14153214567">+1 415-321-4567</a></p>
        </section>
        <section class="col">
            <h2 class="h4">Address</h2>
            <p>
                321 Ivy St.
                <br>
                San Francisco, CA 94102
            </p>
        </section>
    </section>

    <div id="map" class="ratio ratio-16x9 mb-n4"></div>

{% endblock %}


{% block javascript %}<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCXd8mwzW0g7UtZQYcbf_3mQxA01EVpl3o&callback=initMap&v=weekly" defer></script>{% endblock %}
